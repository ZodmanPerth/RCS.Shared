<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
	<!--
		Reference:
		<ResourceDictionary Source="pack://application:,,,/OKB.Theme;component/Controls/ScrollViewer/Colours.ScrollViewer.xaml" />
	-->

	<!--Core colours from aero2-->
	
	
	<Color x:Key="Colour.ScrollViewer.Foreground">black</Color>
	<Color x:Key="Colour.ScrollViewer.Foreground.Disabled">#6D6D6D</Color>
	
	<Color x:Key="Colour.ScrollViewer.Background">Transparent</Color>

	
	<Color x:Key="Colour.ScrollBar.Foreground">black</Color>
	<Color x:Key="Colour.ScrollBar.Foreground.Disabled">#6D6D6D</Color>

	<Color x:Key="Colour.ScrollBar.Background">#F0F0F0</Color>

	<Color x:Key="Colour.ScrollBar.Border">#F0F0F0</Color>

	
	<Color x:Key="Colour.ScrollBar.Button.Glyph">#606060</Color>
	<Color x:Key="Colour.ScrollBar.Button.Glyph.Hover">black</Color>
	<Color x:Key="Colour.ScrollBar.Button.Glyph.Pressed">white</Color>
	<Color x:Key="Colour.ScrollBar.Button.Glyph.Disabled">#BFBFBF</Color>

	<Color x:Key="Colour.ScrollBar.Button.Background">#F0F0F0</Color>
	<Color x:Key="Colour.ScrollBar.Button.Background.Hover">#DADADA</Color>
	<Color x:Key="Colour.ScrollBar.Button.Background.Pressed">#606060</Color>
	<Color x:Key="Colour.ScrollBar.Button.Background.Disabled">#F0F0F0</Color>
	
	<Color x:Key="Colour.ScrollBar.Button.Border">#F0F0F0</Color>
	<Color x:Key="Colour.ScrollBar.Button.Border.Hover">#DADADA</Color>
	<Color x:Key="Colour.ScrollBar.Button.Border.Pressed">#606060</Color>
	<Color x:Key="Colour.ScrollBar.Button.Border.Disabled">#F0F0F0</Color>

	<Color x:Key="Colour.ScrollBar.Button.Thumb.Background">#CDCDCD</Color>
	<Color x:Key="Colour.ScrollBar.Button.Thumb.Background.Hover">#A6A6A6</Color>
	<Color x:Key="Colour.ScrollBar.Button.Thumb.Background.Pressed">#606060</Color>
	<Color x:Key="Colour.ScrollBar.Button.Thumb.Background.Disabled">#DADADA</Color>

	<Color x:Key="Colour.ScrollBar.FocusVisual.Border">#8E6EA6F5</Color>
	
</ResourceDictionary>