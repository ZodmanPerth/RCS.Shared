<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
	<!--
		Reference:
		<ResourceDictionary Source="pack://application:,,,/OKB.Theme;component/Controls/Lists/Colours.ListBox.xaml" />
	-->

	
	<!--Core colours from aero2-->

	<Color x:Key="Colour.ListBox.Foreground">black</Color>
	
	<Color x:Key="Colour.ListBox.Background">white</Color>
	<Color x:Key="Colour.ListBox.Background.Disabled">white</Color>

	<Color x:Key="Colour.ListBox.Border">#FFABADB3</Color>
	<Color x:Key="Colour.ListBox.Border.Disabled">#FFD9D9D9</Color>


	<Color x:Key="Colour.ListBoxItem.Foreground.Disabled">#6D6D6D</Color>
	
	<Color x:Key="Colour.ListBoxItem.Background">Transparent</Color>
	<Color x:Key="Colour.ListBoxItem.Background.Hover">#1F26A0DA</Color>
	<Color x:Key="Colour.ListBoxItem.Background.Selected.Active">#3D26A0DA</Color>
	<Color x:Key="Colour.ListBoxItem.Background.Selected.Inactive">#3DDADADA</Color>
	
	<Color x:Key="Colour.ListBoxItem.Border">Transparent</Color>
	<Color x:Key="Colour.ListBoxItem.Border.Hover">#A826A0DA</Color>
	<Color x:Key="Colour.ListBoxItem.Border.Selected.Active">#FF26A0DA</Color>
