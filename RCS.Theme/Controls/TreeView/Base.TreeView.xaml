	<!-- ======== ListViewItem ToggleButton ======== -->
	
	
	<PathGeometry x:Key="Base.TreeViewItem.Geometry.ToggleButton">
		<PathGeometry.Figures>
			<PathFigureCollection>
				<PathFigure IsFilled="True" StartPoint="0 0" IsClosed="True">
					<PathFigure.Segments>
						<PathSegmentCollection>
							<LineSegment Point="0 6" />
							<LineSegment Point="6 0" />
						</PathSegmentCollection>
					</PathFigure.Segments>
				</PathFigure>
			</PathFigureCollection>
		</PathGeometry.Figures>
	</PathGeometry>

	<Style x:Key="Base.Style.TreeViewItem.ToggleButton" TargetType="{x:Type ToggleButton}">
		<Setter Property="Width" Value="{DynamicResource TreeViewItem.ToggleButton.Width}" />
		<Setter Property="Height" Value="{DynamicResource TreeViewItem.ToggleButton.Height}" />
		<Setter Property="Focusable" Value="{DynamicResource TreeView.ToggleButton.ScrollViewer.Focusable}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ToggleButton}">
					
					<Border
						x:Name="bd"
						Width="{TemplateBinding Width}"
						Height="{TemplateBinding Height}"
						Background="{DynamicResource Brush.TreeViewItem.ToggleButton.Background}"
						Margin="{DynamicResource TreeViewItem.ToggleButton.Margin}"
						Padding="{DynamicResource TreeViewItem.ToggleButton.Padding}"
					>
						<Path
							x:Name="ExpandPath"
							Fill="{DynamicResource Brush.TreeViewItem.ToggleButton.Background}"
							Stroke="{DynamicResource Brush.TreeViewItem.ToggleButton.Stroke}"
							Data="{DynamicResource Base.TreeViewItem.Geometry.ToggleButton}"
						>
							<UIElement.RenderTransform>
								<RotateTransform
									Angle="{DynamicResource TreeViewItem.ToggleButton.RotateTransform.Angle}"
									CenterX="{DynamicResource TreeViewItem.ToggleButton.RotateTransform.Center.X}"
									CenterY="{DynamicResource TreeViewItem.ToggleButton.RotateTransform.Center.Y}"
								/>
							</UIElement.RenderTransform>
						</Path>
					</Border>

					<ControlTemplate.Triggers>
						<Trigger Property="ToggleButton.IsChecked" Value="True">
							<Setter TargetName="bd" Property="Margin" Value="{DynamicResource TreeViewItem.ToggleButton.Margin.Checked}"/>
							<Setter TargetName="bd" Property="Padding" Value="{DynamicResource TreeViewItem.ToggleButton.Padding.Checked}"/>
							<Setter TargetName="ExpandPath" Property="RenderTransform">
								<Setter.Value>
									<RotateTransform
										Angle="{DynamicResource TreeViewItem.ToggleButton.RotateTransform.Angle.Checked}"
										CenterX="{DynamicResource TreeViewItem.ToggleButton.RotateTransform.Center.X.Checked}"
										CenterY="{DynamicResource TreeViewItem.ToggleButton.RotateTransform.Center.Y.Checked}"
									/>
								</Setter.Value>
							</Setter>
							<Setter TargetName="ExpandPath" Property="Shape.Fill" Value="{DynamicResource Brush.TreeViewItem.ToggleButton.Checked.Background}" />
							<Setter TargetName="ExpandPath" Property="Shape.Stroke" Value="{DynamicResource Brush.TreeViewItem.ToggleButton.Checked.Stroke}" />
						</Trigger>
						<Trigger Property="UIElement.IsMouseOver" Value="True">
							<Setter TargetName="ExpandPath" Property="Shape.Stroke" Value="{DynamicResource Brush.TreeViewItem.ToggleButton.Hover.Stroke}" />
							<Setter TargetName="ExpandPath" Property="Shape.Fill" Value="{DynamicResource Brush.TreeViewItem.ToggleButton.Hover.Background}" />
						</Trigger>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="UIElement.IsMouseOver" Value="True" />
								<Condition Property="ToggleButton.IsChecked" Value="True" />
							</MultiTrigger.Conditions>
							<Setter TargetName="ExpandPath" Property="Shape.Stroke" Value="{DynamicResource Brush.TreeViewItem.ToggleButton.Hover.Checked.Stroke}" />
							<Setter TargetName="ExpandPath" Property="Shape.Fill" Value="{DynamicResource Brush.TreeViewItem.ToggleButton.Hover.Checked.Background}" />
						</MultiTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
				
			</Setter.Value>
		</Setter>
	</Style>

	
	
	<!-- ======== TreeViewItem ======== -->

	<ControlTemplate x:Key="Base.ControlTemplate.TreeViewItem" TargetType="TreeViewItem" >
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition MinWidth="19" Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<ToggleButton
				x:Name="Expander"
				Style="{DynamicResource Base.Style.TreeViewItem.ToggleButton}"
				ClickMode="Press"
				IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
			/>

			<Border
				x:Name="Bd"
				Grid.Column="1"
				Background="{TemplateBinding Background}"
				BorderBrush="{TemplateBinding BorderBrush}"
				BorderThickness="{TemplateBinding BorderThickness}"
				Margin="{TemplateBinding Margin}"
				Padding="{TemplateBinding Padding}"
				SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
			>
				<ContentPresenter
					Name="PART_Header"
					ContentSource="Header"
					HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
					SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
				/>
			</Border>

			<ItemsPresenter
				Name="ItemsHost"
				Grid.Row="1"
				Grid.Column="1"
				Grid.ColumnSpan="2"
			/>

		</Grid>

		<ControlTemplate.Triggers>

			<Trigger Property="TreeViewItem.IsExpanded" Value="False">
				<Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
			</Trigger>

			<Trigger Property="ItemsControl.HasItems" Value="False">
				<Setter TargetName="Expander" Property="Visibility" Value="Hidden" />
			</Trigger>

			<DataTrigger Binding="{Binding IsHighlighted}" Value="True">
				<Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.TreeViewItem.Background.Highlighted}"/>
				<Setter Value="{DynamicResource Brush.TreeViewItem.Foreground.Highlighted}" Property="TreeViewItem.Foreground" />
			</DataTrigger>

			<Trigger SourceName="Bd" Property="IsMouseOver" Value="True">
				<Setter TargetName="Bd" Value="{DynamicResource Brush.TreeViewItem.Background.Hover}" Property="Border.Background" />
				<Setter Value="{DynamicResource Brush.TreeViewItem.Foreground.Hover}" Property="TreeViewItem.Foreground" />
			</Trigger>

			<Trigger Property="TreeViewItem.IsSelected" Value="True">
				<Setter TargetName="Bd" Value="{DynamicResource Brush.TreeViewItem.Background.Selected}" Property="Border.Background" />
				<Setter Value="{DynamicResource Brush.TreeViewItem.Foreground.Selected}" Property="Foreground" />
			</Trigger>

			<MultiTrigger>
				<MultiTrigger.Conditions>
					<Condition Property="TreeViewItem.IsSelected" Value="True" />
					<Condition Property="TreeViewItem.IsSelectionActive" Value="False" />
				</MultiTrigger.Conditions>
				<Setter TargetName="Bd" Value="{DynamicResource Brush.TreeViewItem.Background.Selected.Inactive}" Property="Border.Background" />
				<Setter Value="{DynamicResource Brush.TreeViewItem.Foreground.Selected.Inactive}" Property="Foreground" />
			</MultiTrigger>

			<Trigger Property="IsEnabled" Value="False">
				<Setter Value="{DynamicResource Brush.TreeViewItem.Foreground.Disabled}" Property="Foreground" />
			</Trigger>


		</ControlTemplate.Triggers>
	</ControlTemplate>

	<Style x:Key="Base.Style.TreeViewItem" TargetType="{x:Type TreeViewItem}">
		<Setter Property="Foreground" Value="{DynamicResource Brush.TreeViewItem.Foreground}" />
		<Setter Property="Background" Value="{DynamicResource Brush.TreeViewItem.Background}" />
		<Setter Property="BorderBrush" Value="{DynamicResource Brush.TreeViewItem.Border}" />
		<Setter Property="BorderThickness" Value="{DynamicResource TreeViewItem.BorderThickness}" />
		<Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter Property="Margin" Value="{DynamicResource TreeViewItem.Margin}" />
		<Setter Property="Padding" Value="{DynamicResource TreeViewItem.Padding}" />
		<Setter Property="FontFamily" Value="{DynamicResource TreeViewItem.FontFamily}" />
		<Setter Property="FontSize" Value="{DynamicResource TreeViewItem.FontSize}" />
		<Setter Property="FontWeight" Value="{DynamicResource TreeViewItem.FontWeight}" />
		<Setter Property="SnapsToDevicePixels" Value="{DynamicResource TreeViewItem.SnapsToDevicePixels}" />
		<Setter Property="FrameworkElement.FocusVisualStyle" Value="{DynamicResource Base.Style.TreeViewItem.FocusVisual}" />
		<Setter Property="Template" Value="{DynamicResource Base.ControlTemplate.TreeViewItem}" />
		
		<!--Extended DataContext Properties-->
		<Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
		<Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />

		<Style.Triggers>
			<Trigger Property="VirtualizingPanel.IsVirtualizing" Value="True">
				<Setter Property="ItemsPanel" Value="{DynamicResource Base.TreeView.ItemsPanelTemplate.VirtualizingPanel}" />
			</Trigger>
		</Style.Triggers>

	</Style>



	<!-- ======== TreeView ======== -->

	<ControlTemplate x:Key="Base.ControlTemplate.TreeView" TargetType="TreeView">
		<Border
			Name="Bd"
			BorderBrush="{TemplateBinding BorderBrush}"
			BorderThickness="{TemplateBinding BorderThickness}"
			SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
		>
			<ScrollViewer
				x:Name="tvScrollViewer"
				Style="{DynamicResource Base.Style.ScrollViewer}"
				Background="{TemplateBinding Background}"
				Focusable="{DynamicResource TreeView.ScrollViewer.Focusable}"
				CanContentScroll="{DynamicResource TreeView.ScrollViewer.CanContentScroll}"
				HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
				VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
				PanningMode="{TemplateBinding ScrollViewer.PanningMode}"
				Padding="{TemplateBinding Padding}"
				SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
			>
				<ItemsPresenter />
			</ScrollViewer>
		</Border>
		
		<ControlTemplate.Triggers>
			<Trigger Property="IsEnabled" Value="False">
				<Setter TargetName="Bd" Property="Border.Background" Value="{DynamicResource Brush.TreeView.Background.Disabled}" />
			</Trigger>
			<Trigger Property="VirtualizingPanel.IsVirtualizing" Value="True">
				<Setter TargetName="tvScrollViewer" Property="ScrollViewer.CanContentScroll" Value="True" />
			</Trigger>
		</ControlTemplate.Triggers>
		
	</ControlTemplate>
	
