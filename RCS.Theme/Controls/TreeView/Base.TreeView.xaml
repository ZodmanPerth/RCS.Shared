		<Setter Property="Margin" Value="{DynamicResource TreeView.Margin}" />
		<Setter Property="Padding" Value="{DynamicResource TreeView.Padding}" />
		<Setter Property="FontFamily" Value="{DynamicResource TreeView.FontFamily}" />
		<Setter Property="FontSize" Value="{DynamicResource TreeView.FontSize}" />
		<Setter Property="FontWeight" Value="{DynamicResource TreeView.FontWeight}" />
		<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="{DynamicResource TreeView.ScrollViewer.HorizontalScrollBarVisibility}" />
		<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="{DynamicResource TreeView.ScrollViewer.VerticalScrollBarVisibility}" />
		<Setter Property="ScrollViewer.PanningMode" Value="{DynamicResource TreeView.ScrollViewer.PanningMode}" />
		<Setter Property="Stylus.IsFlicksEnabled" Value="{DynamicResource TreeView.Stylus.IsFlicksEnabled}" />
		<Setter Property="HorizontalContentAlignment" Value="{DynamicResource TreeView.HorizontalContentAlignment}" />
		<Setter Property="VerticalContentAlignment" Value="{DynamicResource TreeView.VerticalContentAlignment}" />
		<Setter Property="SnapsToDevicePixels" Value="{DynamicResource TreeView.SnapsToDevicePixels}" />
		<Setter Property="ItemContainerStyle" Value="{DynamicResource Base.Style.TreeViewItem}" />
		<Setter Property="Template" Value="{DynamicResource Base.ControlTemplate.TreeView}" />

		<Style.Triggers>
			<Trigger Property="VirtualizingPanel.IsVirtualizing" Value="True">
				<Setter Property="ItemsPanel" Value="{DynamicResource Base.TreeView.ItemsPanelTemplate.VirtualizingPanel}" />
			</Trigger>
		</Style.Triggers>
		
	</Style>

