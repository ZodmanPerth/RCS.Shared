<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
	<!--
		Reference:
		<ResourceDictionary Source="pack://application:,,,/RCS.Theme;component/Controls/TextBlocks/Base.TextBlock.xaml" />
	-->
	
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="pack://application:,,,/RCS.Theme;component/Design/Design.Brushes.xaml" />
		<ResourceDictionary Source="pack://application:,,,/RCS.Assets;component/Design/Design.Font.xaml" />
	</ResourceDictionary.MergedDictionaries>


	<Style x:Key="Base.Style.TextBlock" TargetType="TextBlock" >
		<Setter Property="FontFamily" Value="{StaticResource Design.Font.Family.Inter}" />
		<Setter Property="FontSize" Value="12" />
		<Setter Property="FontWeight" Value="Normal"/>
		<Setter Property="TextWrapping" Value="NoWrap"/>
		<Setter Property="TextTrimming" Value="None"/>
		<Setter Property="Foreground" Value="{StaticResource Design.Brush.Text.Primary}"/>
	</Style>

	
</ResourceDictionary>
