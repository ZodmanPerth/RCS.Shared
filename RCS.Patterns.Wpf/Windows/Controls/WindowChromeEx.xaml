<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
	xmlns:windowControls="clr-namespace:RCS.Windows.Controls"
>
	<Style x:Key="Core.Style.WindowChromeEx" TargetType="{x:Type windowControls:WindowChromeEx}" >

		<!--Colour from Windows 11-->
		<Setter Property="ChromeBrush" Value="#F2F2F9"/>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type windowControls:WindowChromeEx}">
					<Border
						x:Name="PART_WindowChromeBorder"
						BorderThickness="4,0,4,4"
					>
						<Grid>

							<Grid.RowDefinitions>
								<RowDefinition Height="31" x:Name="PART_TitleBarRow" />
								<RowDefinition />
							</Grid.RowDefinitions>

							<!--Fill vacant space below system caption bar-->
							<Rectangle
								x:Name="PART_TitleBarFiller"
								Grid.Row="0"
								VerticalAlignment="Bottom"
								Height="4"
							/>

							<!--Window Title Bar-->
							<Grid Grid.Row="0" >

								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="26" />
									<ColumnDefinition             x:Name="PART_ColumnnDefinitionTitleBarContent"/>
									<ColumnDefinition Width="143" x:Name="PART_ColumnnDefinitionNoGoZone" />
								</Grid.ColumnDefinitions>

								<!--Icon menu-->
								<Rectangle
									x:Name="PART_IconMenu"
									Grid.Column="0"
								/>

								<!--Icon-->
								<svgc:SvgBitmap
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									Width="16"
									Margin="5,0,0,0"
									AppName="RCS.Assets"
									UriSource="/Assets/SVG/icon-16.svg"
									IsHitTestVisible="False"
								/>

								<!--Dragbar-->
								<Rectangle
									x:Name="PART_WindowDragBar"
									Grid.Column="1"
								/>

								<!--Title bar content-->
								<ContentPresenter
									Grid.Column="1"
									Content="{TemplateBinding TitleBarContent}"
									ContentTemplate="{TemplateBinding TitleBarContentTemplate}"
								/>

							</Grid>

							<!--Window content-->
							<ContentPresenter
								Grid.Row="1"
								Content="{TemplateBinding Content}"
								ContentTemplate="{TemplateBinding ContentTemplate}"
							/>

						</Grid>

					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		
	</Style>
	
</ResourceDictionary>
